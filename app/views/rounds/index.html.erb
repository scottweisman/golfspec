<h1>Your Rounds</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Score</th>
    <th>Fairways</th>
    <th>Greens</th>
    <th>Putts</th>
    <th>Notes</th>
    <th></th>
    <th></th>
  </tr>

<% @rounds.each do |round| %>
  <tr>
    <td><%= round.date_played %></td>
    <td><%= round.score %></td>
    <td><%= round.fairways %></td>
    <td><%= round.greens %></td>
    <td><%= round.putts %></td>
    <td><%= round.notes %></td>
    <td><%= link_to 'Show', round %></td>
    <td><%= link_to 'Edit', edit_round_path(round) %></td>
    <td><%= link_to 'Destroy', round, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

