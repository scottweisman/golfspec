<% if current_user && current_user.rounds.any? %>

  <table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Score</th>
      <th>Fairways</th>
      <th>Greens</th>
      <th>Putts</th>
      <th>Notes</th>
    </tr>
  </thead>

  <tbody>
  <% @rounds.each do |round| %>
    <tr>
      <td><%= link_to round.date_played.strftime('%m/%d/%y'), round %></td>
      <td><%= round.score %></td>
      <td><%= round.fairways %></td>
      <td><%= round.greens %></td>
      <td><%= round.putts %></td>
      <td><%= round.notes %></td>
    </tr>
  <% end %>
  </tbody>
  </table>

<% elsif current_user %>

  <div class="row">
    <div class="six columns centered">
      <div class="panel">
        <h5>Welcome to GolfSpec.</h5>
        <p>To get started, enter your score and stats from a recent round.</p>
      </div>
    </div>
  </div>

<% else %>

  <div class="row">
    <div class="six columns centered">
      <div class="panel">
        <h5>Welcome to GolfSpec.</h5>
        <p>Sign in with Facebook to get started.</p>
      </div>
    </div>
  </div>

<% end %>