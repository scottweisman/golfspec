<%= simple_form_for @round do |f| %>
  <%= f.input :date_played, as: :string, input_html: { :value => Date.today.strftime("%b %d, %Y") }  %>
  <%= f.input :score, as: :string %>
  <%= f.input :fairways, as: :string %>
  <%= f.input :greens, as: :string %>
  <%= f.input :putts, as: :string %>
  <%= f.input :notes, as: :text, input_html: { :rows => 5 } %>
  <%= f.button :submit %>
<% end %>
